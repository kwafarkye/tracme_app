- provide(:title, @post.title)

.postcontent
   %h1= @post.title
   %p= @post.info

   -if @post.attachments.any?
      -for @attach in @post.attachments
         =image_tag @attach.image.url(:medium)
         %br
         %p= @attach.caption
         %br

   -if signed_in?
      =link_to "delete", @post, method: :delete, data: {confirm: "Are you Sure You Would Like to Delete This Post?"}

   -if signed_in?
      .span8
         %section
            =render 'shared/attachment_form'
.span4
   %section
      =render 'shared/comment_form'
.span8
   -if @post.comments.any?
      %h3 Comments
      %ol.comments
         =render @comments
      =will_paginate @comments
